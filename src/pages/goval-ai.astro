---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="GoVal AI - Intelligent Validation Automation">
  <Navigation />

  <!-- Hero Section -->
  <section class="hero-ai">
    <div class="container">
      <div class="hero-content">
        <div class="hero-text">
          <div class="hero-badge">[ Next Generation AI-Powered Validation ]</div>
          <h1>
            GoVal AI<br/>
            Intelligent Validation<br/>
            at Scale
          </h1>
          <p class="hero-description">
            Experience the power of Artificial Intelligence (AI) in validation processes. GoVal AI automates complex assessments, generates intelligent test cases, and accelerates compliance while maintaining the highest standards of accuracy.
          </p>
          
        </div>
      </div>
    </div>
  </section>

  <!-- Capabilities Section -->
  <section class="section capabilities">
    <div class="container">
      <h2 class="capabilities-title">What GoVal AI can do for you?</h2>
      <div class="capabilities-grid">
        <div class="capability-card">
          <h3>Validate URS & Specifications</h3>
          <p>Take a help from GoVal AI to validate URS, functional and design specifications</p>
        </div>
        <div class="capability-card">
          <h3>AI-Driven Risk Assessment</h3>
          <p>Automatically categorize GxP risk levels using machine learning models trained on thousands of validation projects.</p>
        </div>
        <div class="capability-card">
          <h3>Test Case Management</h3>
          <p>Generate comprehensive test protocols instantly based on system requirements and historical project data.</p>
        </div>
        <div class="capability-card">
          <h3>Intelligent Insights</h3>
          <p>GoVal AI empowers you to query validation records and deliver an analytical edge to your validation process.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-ai">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Accelerate Your Validation?</h2>
        <p>Experience the power of AI in your validation workflows and achieve compliance faster than ever.</p>
        <a href="/contact-us" class="btn btn-ai-blue btn-lg">Book a Demo</a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .section {
    padding: 4rem 0;
    background: #ffffff;
  }
  /* Hero Section */
  .hero-ai {
    background: #ffffff;
    padding: 6rem 0;
  }
  .hero-content {
    display: flex;
    justify-content: center;
  }
  .hero-text {
    max-width: 600px;
    text-align: center;
  }
  .hero-badge {
    display: inline-block;
    background: rgba(247, 247, 248, 0.1);
    color: #070707;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    font-weight: 500;
    margin-bottom: 1.5rem;
    text-transform: uppercase;
  }
  .hero-text h1 {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: #111827;
  }
  .hero-description {
    font-size: 1.25rem;
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  .hero-buttons {
    display: flex;
    justify-content: center;
  }
  /* Capabilities Section */
  .capabilities-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 2rem;
  }
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }
  .capability-card {
    background: #f9fafb;
    padding: 2rem;
    border-radius: 0.75rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    text-align: center;
    transition: transform 0.2s ease;
  }
  .capability-card:hover {
    transform: translateY(-5px);
  }
  .capability-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }
  .capability-card p {
    color: #4b5563;
    line-height: 1.6;
  }
  /* CTA Section */
  .cta-ai {
    background: #f3f4f6;
  }
  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }
  .cta-content p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    color: #4b5563;
  }
  /* Buttons */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    border-radius: 0.625rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }
  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }
  .btn-ai-blue {
    background: linear-gradient(135deg, #eb3525 0%, #e22d04 50%, #eb5504 100%);
    color: white;
    box-shadow: 0 6px 20px rgba(211, 101, 46, 0.3);
  }
  .btn-ai-blue:hover {
    background: linear-gradient(135deg, #e92102 0%, #da420b 50%, #e23408 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(202, 149, 128, 0.919);
  }
  .btn-ai-blue::before {
    content:'';
    position:absolute;
    top:0;left:-100%;
    width:100%;height:100%;
    background:linear-gradient(90deg,transparent,rgba(255,255,255,0.2),transparent);
    transition:left 0.5s ease;
    z-index:1;
  }
  .btn-ai-blue:hover::before {
    left:100%;
  }
  /* Responsive */
  @media (max-width:768px){
    .capabilities-grid {
      grid-template-columns: 1fr;
    }
    .hero-ai {
      padding:4rem 0;
    }
    .hero-text h1 {
      font-size:2.5rem;
    }
    .btn {
      width:100%;
      justify-content:center;
    }
    .cta-content h2 {
      font-size:2rem;
    }
  }
</style>
