---
// src/pages/customer-stories.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="Customer Stories - GoVal Success Stories">
  <Navigation />

  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">Customer Stories</h1>
      <p class="hero-subtitle">
        Discover how leading pharmaceutical companies are transforming their validation processes with GoVal's innovative digital solutions.
      </p>
    </div>
  </section>

  <!-- Customer Stories Grid -->
  <section class="section">
    <div class="container">
      <div class="stories-grid">
        
        <!-- Story 1: Equipment Validation -->
        <article class="story-card">
          <div class="story-image">
            <img src="/images/iot.jpg" alt="Equipment Validation with IoT" />
            <div class="story-overlay">
              <div class="plus-icon">+</div>
            </div>
          </div>
          <div class="story-content">
            <h2 class="story-title">
              <a href="/portfolios/equipment-validation-iot-edc/">
                Equipment Validation with IoT: Streamlining Electronic Data Capture
              </a>
            </h2>
            <div class="story-category">Equipment Validation</div>
            <p class="story-excerpt">
              The customer is a KSA based quality consulting company providing consultancy to healthcare and food industries. The company established in 2013 and have group of consultants located globally from varied expertise and backgrounds. The customer wants to implement GoVal solution for one of their Pharmaceutical customer to automate validation and maintenance activities.
            </p>
          </div>
        </article>

        <!-- Story 2: Paperless Validation -->
        <article class="story-card">
          <div class="story-image">
            <img src="/images/pharma.jpg" alt="India's Global Generic Pharma Digital Leap" />
            <div class="story-overlay">
              <div class="plus-icon">+</div>
            </div>
          </div>
          <div class="story-content">
            <h2 class="story-title">
              <a href="/paperless-validation-gxp-compliance/">
                India's Global Generic Pharma: A Digital Leap with GoVal's Paperless Validation Success
              </a>
            </h2>
            <div class="story-category">Paperless Validation</div>
            <p class="story-excerpt">
              The customer is a leading India-based global generic pharmaceutical company that has successfully implemented GoVal's paperless validation solution to achieve complete digital transformation in their validation processes, ensuring GxP compliance while reducing time-to-market.
            </p>
          </div>
        </article>

      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Transform Your Validation Process?</h2>
        <p>Join these industry leaders and discover how GoVal can revolutionize your pharmaceutical validation workflows.</p>
        <a href="/contact-us" class="btn btn-primary btn-lg">Get Started Today</a>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* Global white background */
  html, body {
    background: #ffffff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .section {
    padding: 4rem 0;
    background: #ffffff;
  }

  /* Hero Section */
  .hero {
    background: #ffffff;
    padding: 4rem 0;
    text-align: center;
    border-bottom: 1px solid #e5e7eb;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Stories Grid */
  .stories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
    gap: 3rem;
    margin-top: 2rem;
  }

  /* Story Card */
  .story-card {
    background: #ffffff;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .story-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  /* Story Image */
  .story-image {
    position: relative;
    height: 280px;
    overflow: hidden;
  }

  .story-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .story-card:hover .story-image img {
    transform: scale(1.05);
  }

  /* Story Overlay */
  .story-overlay {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 3rem;
    height: 3rem;
    background: #3b82f6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.9;
    transition: all 0.3s ease;
  }

  .story-card:hover .story-overlay {
    background: #1d4ed8;
    transform: scale(1.1);
  }

  .plus-icon {
    color: white;
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1;
  }

  /* Story Content */
  .story-content {
    padding: 2rem;
  }

  .story-title {
    margin-bottom: 1rem;
  }

  .story-title a {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    text-decoration: none;
    line-height: 1.3;
    transition: color 0.2s ease;
  }

  .story-title a:hover {
    color: #3b82f6;
  }

  .story-category {
    display: inline-block;
    background: #3b82f6;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  .story-excerpt {
    color: #6b7280;
    line-height: 1.6;
    font-size: 1rem;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.25rem;
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #1d4ed8;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(59, 130, 246, 0.3);
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.125rem;
    }

    .stories-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .story-content {
      padding: 1.5rem;
    }

    .story-title a {
      font-size: 1.25rem;
    }

    .story-image {
      height: 250px;
    }

    .cta-content h2 {
      font-size: 2rem;
    }

    .cta-content p {
      font-size: 1.125rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 3rem 0;
    }

    .section {
      padding: 3rem 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .story-content {
      padding: 1.25rem;
    }

    .cta-content h2 {
      font-size: 1.75rem;
    }

    .btn-lg {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>
