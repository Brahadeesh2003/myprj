  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .section {
    padding: 4rem 0;
  }
  .bg-light {
    background: #fff;
  }
  .hero {
    background: #fff;
    padding: 6rem 0 3rem;
    border-bottom: 1px solid #eaeaea;
  }
  .hero-left-slight {
    text-align: left;
  }
  .hero-badge,
  .hero-title,
  .hero-subtitle {
   text-align: left;
  }
  .hero-badge {
    display: inline-block;
    background: rgba(252, 252, 252, 0.05);
    color: #222;
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }
  .hero-container-left-slight {
    justify-content: flex-start;
  }
  .hero-title {
    font-size: 3.5rem;
    font-weight: 900;
    margin-bottom: 1rem;
  }
  .hero-title-left {
    text-align: left;
  }
  .hero-desc-full {
    width: 100%;
    max-width: none;
    text-align: left;
    margin-left: 0;
    margin-right: 0;
  }
  .hero-subtitle {
    font-size: 1.25rem;
    line-height: 1.5;
    color: #4b5563;
    margin-top: 0;
    margin-bottom: 3rem;
  }
  .pricing-options {
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(320px,1fr));
    gap: 3rem;
  }
  .pricing-option {
    background: white;
    border-radius: 1rem;
    padding: 2rem 3rem;
    box-shadow: 0 3px 6px rgb(0 0 0 / 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid #eee;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .pricing-option:hover {
    transform: translateY(-8px);
    box-shadow: 0 10px 20px rgb(0 0 0 / 0.15);
  }
  .option-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  .option-icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 0.5rem auto;
    fill: none;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #fafbfc;
  }
  .option-title {
    font-size: 1.75rem;
    font-weight: 900;
    color: #222;
    margin-top: 0.8rem;
  }
  .option-subtitle {
    font-size: 1rem;
    color: #555;
    margin-top: 1rem;
  }
  .feature-list {
    margin-top: 2rem;
  }
  .feature-category {
    margin-bottom: 2rem;
  }
  .feature-category h4 {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #151414;
  }
  .feature-category ul {
    list-style: none; /* Removed bullet points */
    padding-left: 0; /* Removed padding */
  }
  .feature-category ul li {
    margin-bottom: 0.25rem;
    color: #555;
    font-size: 0.9rem;
  }
  .pricing-info {
    margin-top: 2rem;
    background: #f5f5f5;
    padding: 1rem 2rem;
    border-radius: 0.75rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .pricing-info strong {
    display: block;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }
  .pricing-info p {
    font-size: 0.9rem;
    color: #666;
  }
  .contact-action {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 1rem;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-weight: 700;
    text-decoration: none;
    background: linear-gradient(45deg, #ef0a06, #f62904);
    color: white;
    border: none;
    transition: background 0.3s, transform 0.15s ease-in-out;
    cursor: pointer;
    font-size: 1rem;
    min-width: 175px;
    justify-content: center;
  }
  .btn svg {
    stroke: white;
  }
  .btn:hover {
    background: linear-gradient(45deg, #f23703, #fb4103);
    transform: translateY(-2px);
  }
  .section-header.centered {
    text-align: center;
  }
  .faq-title {
    font-size: 2rem;
    font-weight: 900;
    margin-bottom: 1.5rem;
  }
  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }
  .faq-item {
    border: 1px solid #eaeaea;
    border-left: 4px solid transparent;
    border-radius: 8px;
    margin-bottom: 1rem;
    overflow: hidden;
  }
  .faq-item[open] {
    border-left-color: #f63303;
  }
  
  .faq-item summary {
    background: #ffffff;
    padding: 1rem 1.5rem;
    cursor: pointer;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .faq-item summary::-webkit-details-marker {
    display: none;
  }
  .faq-item summary::after {
    content: '+';
    font-size: 1.5rem;
    transition: transform 0.3s ease;
  }
  .faq-item[open] summary::after {
    transform: rotate(45deg);
  }
  .faq-answer {
    padding: 1rem 1.5rem;
    font-size: 0.95rem;
    color: #555;
    line-height: 1.6;
    background-color: #fafafa;
  }

  /* Mobile: ensure button stays inside the card box */
  @media (max-width: 768px) {
    .pricing-options {
      grid-template-columns: 1fr;
    }
    .container {
