  .capability-card.card-green:hover { background-color: #10b981; }
  .capability-card.card-yellow:hover { background-color: #f59e0b; }
  .capability-card.card-purple:hover { background-color: #8b5cf6; }
  .capability-card.card-orange:hover { background-color: #f97316; }
  .capability-card.card-indigo:hover { background-color: #f163d2; }
  .capability-card:hover .card-icon { background-color: white; }
  .capability-card:hover .icon-svg { fill: currentColor; }
  .capability-card:hover h3,
  .capability-card:hover p { color: white; }

  /* Analytics Section Styles */
  .analytics-section {
    background: #ffffff;
  }
  .analytics-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  .analytics-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
  }
  .analytics-description {
    font-size: 1.125rem;
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
   .analytics-description a {
    color: #4F46E5;
    font-weight: 600;
    text-decoration: none;
    border-bottom: 1px solid #c7d2fe;
    transition: all 0.2s ease;
  }
  .analytics-description a:hover {
    background-color: #eef2ff;
  }
  .analytics-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .analytics-list li {
    font-size: 1rem;
    color: #374151;
    margin-bottom: 1rem;
    padding-left: 1.75rem;
    position: relative;
  }
  .analytics-list li::before {
    content: '✔';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
  }
  .analytics-image img {
    width: 100%;
    border-radius: 0.75rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  /* CTA Section */
  .cta-ai { background: #f3f4f6; }
  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  .cta-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }
  .cta-content p {
    font-size: 1.125rem;
    margin-bottom: 2rem;
    color: #4b5563;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.875rem 1.5rem;
    border-radius: 0.625rem;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    cursor: pointer;
    overflow: hidden;
  }
  .btn-lg { padding: 1rem 2rem; font-size: 1.125rem; }
  .btn-ai-blue {
    background: linear-gradient(135deg, #eb3525 0%, #e22d04 50%, #eb5504 100%);
    color: white;
    box-shadow: 0 6px 20px rgba(211, 101, 46, 0.3);
  }
  .btn-ai-blue:hover {
    background: linear-gradient(135deg, #e92102 0%, #da420b 50%, #e23408 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(202, 149, 128, 0.919);
  }
  .btn-ai-blue::before {
    content:'';
    position:absolute;
    top:0; left:-100%;
    width:100%; height:100%;
    background:linear-gradient(90deg,transparent,rgba(255,255,255,0.2),transparent);
    transition:left 0.5s ease;
    z-index:1;
  }
  .btn-ai-blue:hover::before { left:100%; }

 .faq-section h2 {
    font-size: 1.5rem;
    margin-bottom: 2rem;
    color: #111827;
  }
  .faq-item {
    margin-bottom: 1.5rem;
  }
  .faq-item h3 {
