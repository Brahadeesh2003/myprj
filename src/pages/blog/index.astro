---
// src/pages/blog/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';

// Define posts array
const posts = [
  {
    slug: 'smarter-validation',
    title: 'Smarter Approach To Implement Paperless Validation Solution For Your Organization',
    date: 'July 23, 2021',
    readTime: '8 min read',
    category: 'Digital Validation',
    image: '/images/smarter-validation.jpg',
    excerpt: 'Discover how a paperless validation solution can streamline processes, reduce risk, and improve compliance in your organization.',
  },
  {
    slug: 'digital-automation',
    title: 'How GoVal can help the organization to go for digital validation and get rid of manual processes',
    date: 'July 1, 2021',
    readTime: '6 min read',
    category: 'Digital Validation',
    image: '/images/digital-automation.jpg',
    excerpt: 'Learn how GoVal’s platform automates validation workflows to eliminate manual paperwork and accelerate time-to-market.',
  },
];
---
<BaseLayout title="Blog – GoVal">
  <Navigation />

  <section class="blog-intro">
    <div class="container">
      <h1>Our Blog</h1>
      <p>Expert insights and practical guidance on digital validation and regulatory compliance.</p>
    </div>
  </section>

  <section class="posts-section">
    <div class="container posts-grid">
      {posts.map(post => (
        <article class="post-card">
          <a href={`/blog/${post.slug}/`} class="post-image-link">
            <img src={post.image} alt={post.title} class="post-image" />
          </a>
          <div class="post-content">
            <div class="post-meta">
              <span class="category">{post.category}</span>
              <span class="read-time">{post.readTime}</span>
              <span class="date">{post.date}</span>
            </div>
            <h2 class="post-title">
              <a href={`/blog/${post.slug}/`}>{post.title}</a>
            </h2>
            <p class="post-excerpt">{post.excerpt}</p>
            <a href={`/blog/${post.slug}/`} class="read-more">Read More →</a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .blog-intro { background:#f9fafb; padding:4rem 0; text-align:center; }
  .blog-intro h1 { font-size:2.5rem; margin-bottom:0.5rem; color:#111827; }
  .blog-intro p { color:#4b5563; }

  .posts-section { background:#ffffff; padding:4rem 0; }
  .posts-grid {
    display:grid;
    gap:2rem;
    grid-template-columns:repeat(auto-fit, minmax(300px,1fr));
  }
  .post-card {
    background:#fff; border-radius:0.75rem; box-shadow:0 4px 20px rgba(0,0,0,0.05);
    overflow:hidden; display:flex; flex-direction:column; transition:transform 0.2s,box-shadow 0.2s;
  }
  .post-card:hover { transform:translateY(-4px); box-shadow:0 8px 30px rgba(0,0,0,0.1); }
  .post-image-link { display:block; overflow:hidden; }
  .post-image {
    width:100%; height:250px; object-fit:cover; transition:transform 0.3s;
  }
  .post-card:hover .post-image { transform:scale(1.05); }
  .post-content {
    padding:1.5rem; flex:1; display:flex; flex-direction:column;
  }
  .post-meta {
    display:flex; flex-wrap:wrap; gap:0.5rem; font-size:0.75rem;
    color:#6b7280; margin-bottom:1rem;
  }
  .category {
    background:#6366f1; color:#fff; padding:0.25rem 0.75rem;
    border-radius:1rem; text-transform:uppercase; font-weight:600;
  }
  .read-time, .date { color:#6b7280; }
  .post-title { font-size:1.25rem; font-weight:700; margin-bottom:0.75rem; }
  .post-title a { color:#111827; text-decoration:none; }
  .post-title a:hover { color:#6366f1; }
  .post-excerpt { color:#4b5563; flex:1; margin-bottom:1rem; }
  .read-more {
    align-self:flex-start; color:#6366f1; font-weight:600; text-decoration:none;
  }
  .read-more:hover { color:#4338ca; }

  @media(max-width:640px) {
    .blog-intro h1 { font-size:2rem; }
    .posts-grid { grid-template-columns:1fr; }
  }
</style>
