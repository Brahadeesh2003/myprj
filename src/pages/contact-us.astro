---
// src/pages/contact-us.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---
<BaseLayout title="Contact Us â€“ GoVal">
  <Navigation />

  <section class="contact-section">
    <div class="contact-form-container">
      <h1>Contact Us</h1>
      <p>Have questions or need a demo? Fill out the form below and our team will get back to you shortly.</p>
      <form class="contact-form" action="/api/contact" method="POST">
        <div class="form-group full-width">
          <label for="email">Business Email *</label>
          <input type="email" id="email" name="email" placeholder="Business Email *" required />
        </div>
        <div class="form-row">
          <div class="form-group half-width">
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" placeholder="First Name" />
          </div>
          <div class="form-group half-width">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" placeholder="Last Name" />
          </div>
        </div>
        <div class="form-group full-width">
          <label for="phone">Phone</label>
          <input type="tel" id="phone" name="phone" placeholder="Phone" maxlength="15" />
        </div>
        <div class="form-row">
          <div class="form-group half-width">
            <label for="country">Country *</label>
            <select id="country" name="country" required>
              <option value="">Select Country *</option>
              <option>United States</option>
              <option>India</option>
              <option>United Kingdom</option>
              <option>Germany</option>
              <!-- add more options -->
            </select>
          </div>
          <div class="form-group half-width">
            <label for="organization">Organization</label>
            <input type="text" id="organization" name="organization" placeholder="Organization" />
          </div>
        </div>
        <div class="form-group full-width">
          <label for="message">How Can I Help You?</label>
          <textarea id="message" name="message" placeholder="How Can I Help You?" rows="6"></textarea>
        </div>
        <div class="checkbox-group">
          <input type="checkbox" id="consent" name="consent" required />
          <label for="consent">
            By submitting this form, you agree to GoVal's 
            <a href="/terms-of-use" target="_blank">Terms of Use</a> and 
            <a href="/privacy-policy" target="_blank">GoVal Privacy Policy</a>.
          </label>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
      </form>
    </div>

    <div class="contact-image-container">
      <img src="/images/contact-illustration.png" alt="Team discussing validation solutions" />
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .contact-section {
    display: flex;
    gap: 2rem;
    align-items: center; /* vertical center */
    max-width: 1200px;
    margin: 4rem auto;
    padding: 0 1rem;
  }

  .contact-form-container {
    flex: 1;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #111827;
  }

  p {
    margin-bottom: 2rem;
    color: #4b5563;
  }

  .form-row {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
  }

  .full-width {
    width: 100%;
  }

  .half-width {
    width: calc(50% - 0.75rem);
    min-width: 200px;
  }

  label {
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  input,
  select,
  textarea {
    font-family: inherit;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    color: #374151;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
  }

  .checkbox-group {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .checkbox-group input[type="checkbox"] {
    width: 16px;
    height: 16px;
    margin: 0;
  }

  .checkbox-group label {
    margin: 0;
    line-height: 1.3;
    white-space: nowrap;
    font-size: 0.875rem;
    color: #4b5563;
  }

  .checkbox-group label a {
    color: #6366f1;
    text-decoration: underline;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 2rem;
    border: none;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    background: #4f46e5;
    color: white;
  }

  .btn:hover,
  .btn:focus {
    background: #4338ca;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(67, 56, 202, 0.3);
  }

  .contact-image-container {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }

  .contact-image-container img {
    max-width: 100%;
    height: auto;
    border-radius: 0.75rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-section {
      flex-direction: column;
    }
    .contact-image-container {
      justify-content: center;
      margin-top: 2rem;
    }
    .half-width {
      width: 100% !important;
    }
  }
</style>
