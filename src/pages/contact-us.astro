---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contact Us – GoVal">
  <Navigation />
  <section class="contact-section">
    <h1 class="section-title">Get in Touch with GoVal</h1>
    <p class="section-subtitle">
      We'd love to hear from you! Whether you have questions about our solutions, need a demo, 
      or want to discuss how GoVal can help streamline your validation processes, our team is here to assist you.
    </p>

    <!-- Left: HubSpot Contact Form -->
    <div class="contact-form-container">
      <h2>Contact Us</h2>
      <!-- HubSpot Form Container -->
      <div id="hubspot-form"></div>
    </div>

    <!-- Right: image on top, details below -->
    <div class="right-container">
      <div class="contact-image-container">
        <img src="/images/customer-support.jpg" alt="Customer Support" />
      </div>
      <div class="contact-info-container">
        <div class="contact-info">
          <!-- Email block -->
          <div class="contact-item">
            <span class="svg-icon email" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#C86428" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="5" width="18" height="14" rx="2" ry="2"></rect>
                <polyline points="3 7 12 13 21 7"></polyline>
              </svg>
            </span>
            <div class="contact-text">
              <span class="contact-label">Email:</span>
              <span class="compact-contact">
                <strong>Sales Enquiry:</strong> <a href="mailto:info@govalidation.com">info@govalidation.com</a>
                <br><strong>Technical Support:</strong> <a href="mailto:govalsupport@adventsys.co">govalsupport@adventsys.co</a>
              </span>
            </div>
          </div>

          <!-- Locations block -->
          <div class="contact-item">
            <span class="svg-icon location" aria-hidden="true">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#3266B8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10.75c0 6-9 10.75-9 10.75S3 16.75 3 10.75a9 9 0 1 1 18 0z"></path>
                <circle cx="12" cy="10.75" r="3"></circle>
              </svg>
            </span>
            <div class="contact-text">
              <span class="contact-label">Locations:</span>
              <!-- INDIA -->
              <span class="compact-contact">
                <strong>INDIA</strong><br/>
                1st Floor, Prestige Samrah Plaza,  
                <br> St Marks Road, Shanthala Nagar,  
                <br>Ashok Nagar, 
                <br>Bengaluru 560 001, India
              </span>
              <span class="compact-contact">
                <span class="svg-inline phone" aria-hidden="true">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#F97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.13 1.21.38 2.39.74 3.5a2 2 0 0 1-.45 2.11L8.09 10.91a16 16 0 0 0 6 6l1.58-1.58a2 2 0 0 1 2.11-.45c1.11.36 2.29.61 3.5.73a2 2 0 0 1 1.71 2z"></path>
                  </svg>
                </span>
                <strong>Phone:</strong> +91 99000 23710, +91 90081 50710
              </span>

              <!-- Spacer -->
              <span class="spacer-line" aria-hidden="true"></span>

              <!-- USA -->
              <span class="compact-contact">
                <strong>USA</strong><br/>
                7232 BROADWAY STE 306,  
                <br>JACKSON HEIGHTS NY 11372, 
                <br>USA
              </span>
              <span class="compact-contact">
                <span class="svg-inline phone" aria-hidden="true">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#F97316" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.13 1.21.38 2.39.74 3.5a2 2 0 0 1-.45 2.11L8.09 10.91a16 16 0 0 0 6 6l1.58-1.58a2 2 0 0 1 2.11-.45c1.11.36 2.29.61 3.5.73a2 2 0 0 1 1.71 2z"></path>
                  </svg>
                </span>
                <strong>Phone:</strong> +1 (408) 457-0086, +1 (908) 656-8258
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <Footer />

  <!-- ✅ Correct HubSpot Form Embed -->
  <script src="https://js.hsforms.net/forms/v2.js" defer is:inline></script>
  <script is:inline>
    window.addEventListener('DOMContentLoaded', function () {
      if (window.hbspt) {
        hbspt.forms.create({
          region: "na1",
          portalId: "6331078",
          formId: "202782da-2994-4f1f-bea6-e947276e83fc",
          target: "#hubspot-form"
        });
      }
    });
  </script>

  <style>
    .section-title {
      font-size: 2.5rem;
      font-weight: 700;
      text-align: center;
      margin-bottom: 0.5rem;
      background: linear-gradient(45deg, #df2be6, #3B82F6, #df2be6, #3B82F6, #df2be6);
      background-size: 300% 300%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: floatingGradient 8s ease-in-out infinite;
    }

    @keyframes floatingGradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    @supports not (-webkit-background-clip: text) {
      .section-title { color: #FF5722; }
    }

    .contact-section {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      max-width: 1200px;
      margin: 2rem auto;
      gap: 2rem;
      padding: 0 1rem;
      align-items: flex-start;
    }

    .contact-form-container {
      flex: 1;
      min-width: 320px;
      max-width: 600px;
    }

    h1 { font-size: 2.5rem; margin-bottom: 1rem; color: #111827; }
    p { color: #4b5563; line-height: 1.5; margin-bottom: 1.25rem; }

    #hubspot-form { width: 100%; }

    .right-container {
      flex: 1;
      min-width: 320px;
      max-width: 600px;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .contact-image-container img {
      max-width: 100%;
      height: 390px;
      border-radius: 14px;
      display: block;
    }

    .contact-info-container {
      background: #f3f4f6;
      border-radius: 12px;
      padding: 18px;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
    }

    .contact-item { display: flex; align-items: flex-start; gap: 10px; }
    .svg-icon { display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
    .contact-text { display: flex; flex-direction: column; font-size: 0.97rem; color: #374151; }
    .contact-label { font-weight: 700; font-size: 1rem; color: #1f2937; margin-bottom: 4px; }
    .compact-contact { display: block; margin-bottom: 1rem; }
    .contact-text a { color: #2563eb; text-decoration: none; }
    .contact-text a:hover { text-decoration: underline; }

    @media (max-width: 991px) {
      .contact-section { flex-direction: column; }
      .right-container { max-width: 100%; margin: 0 auto 24px; }
    }
  </style>
</BaseLayout>
