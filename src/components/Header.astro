---
// src/components/Header.astro

export interface Props {
  title?: string;
}
const { title = 'GoVal - Digital Validation' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body>
    <header class="header">
      <div class="container header-container">
        <a href="/" class="header-logo">GoVal</a>
        <nav class="header-nav">
          <a href="/" class="header-link">Home</a>
          <a href="/about" class="header-link">About</a>
          <a href="/pricing" class="header-link">Pricing</a>
          <a href="/customer-stories" class="header-link">Stories</a>
          <a href="/goval-ai" class="header-link">GoVal AI</a>
          <a href="/contact" class="header-link">Contact</a>
        </nav>
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
.header {
  background: #ffffff;
  border-bottom: 1px solid var(--gray-200);
  padding: var(--spacing-md) 0;
  position: sticky;
  top: 0;
  z-index: 50;
}

.header-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-logo {
  font-size: 1.5rem;
  font-weight: 800;
  color: var(--blue-primary);
  text-decoration: none;
}

.header-nav {
  display: flex;
  gap: var(--spacing-lg);
}

.header-link {
  color: var(--gray-700);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.2s ease;
}

.header-link:hover,
.header-link:focus {
  color: var(--blue-primary);
}

@media (max-width: 768px) {
  .header-nav {
    display: none;
  }
}
</style>
