// src/components/Navigation.astro
---
<nav class="navbar">
  <div class="nav-container">
    <!-- Logo -->
    <a href="/" class="nav-logo">
      <img
        src="/images/goval-logo.png"
        alt="GoVal â€“ Digital Validation Solutions"
        class="logo-image"
      />
    </a>
    <!-- Navigation Links -->
    <ul class="nav-menu" id="nav-menu">
      <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
      <li class="nav-item"><a href="/goval-ai" class="nav-link">GoVal AI</a></li>
      <li class="nav-item"><a href="/solutions" class="nav-link">Solutions</a></li>
      <li class="nav-item"><a href="/blog" class="nav-link">Blog</a></li>
      <li class="nav-item"><a href="/customer-stories" class="nav-link">Customer Stories</a></li>
      <li class="nav-item"><a href="/about" class="nav-link">About GoVal</a></li>
      <li class="nav-item cta-item"><a href="/contact-us" class="nav-cta">Contact Us</a></li>
    </ul>
    <!-- Mobile Toggle -->
    <button id="nav-toggle" class="nav-toggle" aria-label="Toggle navigation">
      <svg width="28" height="28" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </div>
</nav>
<style>
  .navbar {
    background: rgba(255,255,255,0.98);
    backdrop-filter: blur(12px);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 9rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .nav-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
  }
  .nav-logo .logo-image {
    height: 7rem;
    max-width: 700px;
    width: auto;
    object-fit: contain;
    transition: transform 0.2s ease;
  }
  .nav-logo:hover .logo-image {
    transform: scale(1.02);
  }
  .nav-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: none;
    flex-direction: column;
    gap: 1.5rem;
    position: fixed;
    top: 9rem;
    left: 0;
    right: 0;
    background: #fff;
    padding: 2rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    max-height: calc(100vh - 9rem);
    overflow-y: auto;
  }
  .nav-menu.active {
    display: flex;
  }
  @media (min-width: 1024px) {
    .nav-menu {
      display: flex !important;
      position: static;
      flex-direction: row;
      gap: 1.5rem;
      background: none;
      padding: 0;
      box-shadow: none;
      max-height: none;
      overflow: visible;
      align-items: center;
    }
  }
  .nav-item {
    margin: 0;
  }
  .nav-link {
    display: block;
    padding: 0.5rem 0;
    color: #374151;
    font-weight: 500;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border-bottom: 2px solid transparent;
  }
  .nav-link:hover,
  .nav-link.active {
    color: #3B82F6;
    border-bottom-color: #3B82F6;
  }
  .nav-cta {
    display: inline-block !important;
    background: linear-gradient(135deg, #3B82F6 0%, #1D4ED8 100%) !important;
    color: #ffffff !important;
    padding: 0.75rem 1.5rem !important;
    border-radius: 50px !important;
    font-weight: 700 !important;
    font-size: 1.0rem !important;
    text-decoration: none !important;
    transition: all 0.3s ease !important;
    border: 3px solid transparent !important;
    box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3) !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
  }
  .nav-cta:hover {
    background: linear-gradient(135deg, #1D4ED8 0%, #1E40AF 100%) !important;
    transform: translateY(-3px) !important;
    box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4) !important;
    border-color: #93C5FD !important;
  }
  .cta-item {
    margin-left: 0.5rem;
  }
  @media (max-width: 1023px) {
    .nav-cta {
      margin-top: 1rem !important;
      text-align: center !important;
      width: 100% !important;
    }
  }
  .nav-toggle {
    display: block;
    background: none;
    border: 2px solid #374151;
    border-radius: 8px;
    cursor: pointer;
    color: #374151;
    padding: 0.5rem;
    transition: all 0.2s ease;
  }
  .nav-toggle:hover {
    background: #F3F4F6;
    border-color: #3B82F6;
    color: #3B82F6;
  }
  @media (min-width: 1024px) {
    .nav-toggle {
      display: none;
    }
  }
  /* Tablet Adjustments */
  @media (max-width: 1023px) and (min-width: 768px) {
    .nav-container {
      height: 7rem;
      padding: 0 1.5rem;
    }
    .nav-logo .logo-image {
      height: 5rem;
      max-width: 300px;
    }
    .nav-menu {
      top: 7rem;
    }
  }
  /* Mobile Adjustments */
  @media (max-width: 767px) {
    .nav-container {
      height: 6rem;
      padding: 0 1rem;
    }
    .nav-logo .logo-image {
      height: 4rem;
      max-width: 220px;
    }
    .nav-menu {
      top: 6rem;
      padding: 1.5rem;
    }
    .nav-link {
      font-size: 0.9rem;
      padding: 0.75rem 0;
    }
    .nav-cta {
      font-size: 0.9rem !important;
      padding: 0.75rem 1.5rem !important;
    }
    /* Reduced Contact Us button on mobile */
    .nav-cta {
      padding: 0.3rem 0.6rem !important;
      font-size: 0.8rem !important;
      border-radius: 0.25rem !important;
      margin: 0.5rem auto 0 !important;
      width: auto !important;
      display: inline-block !important;
    }
    .nav-cta:hover {
      transform: translateY(0) !important;
    }
  }
  /* Extra Small Mobile */
  @media (max-width: 480px) {
    .nav-container {
      height: 5.5rem;
      padding: 0 0.75rem;
    }
    .nav-logo .logo-image {
      height: 3.5rem;
      max-width: 200px;
    }
    .nav-menu {
      top: 5.5rem;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('nav-toggle');
    const menu   = document.getElementById('nav-menu');
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('active');
      });
      menu.querySelectorAll('a').forEach(a => {
        a.addEventListener('click', () => {
          menu.classList.remove('active');
        });
      });
      document.addEventListener('click', (e) => {
        if (!toggle.contains(e.target) && !menu.contains(e.target)) {
          menu.classList.remove('active');
        }
      });
      const path = window.location.pathname;
      menu.querySelectorAll('.nav-link').forEach(a => {
        if (a.getAttribute('href') === path) {
          a.classList.add('active');
        }
      });
    }
  });
</script>
