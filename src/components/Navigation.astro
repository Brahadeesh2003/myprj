<script>
  document.addEventListener('DOMContentLoaded', () => {
    const toggle = document.getElementById('nav-toggle');
    const menu = document.getElementById('nav-menu');

    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        menu.classList.toggle('active');
      });

      menu.querySelectorAll('.has-dropdown > .nav-link').forEach(link => {
        link.addEventListener('click', (e) => {
            if (window.innerWidth < 1024) {
                e.preventDefault();
                link.parentElement.classList.toggle('mobile-active');
            }
        });
      });

      menu.querySelectorAll('.has-megamenu > .nav-link').forEach(link => {
        link.addEventListener('click', (e) => {
          if (window.innerWidth < 1024) {
            e.preventDefault();
            link.parentElement.classList.toggle('mobile-active');
          }
        });
      });
    }

    const categories = document.querySelectorAll('.menu-category');
    const submenuContents = document.querySelectorAll('.submenu-content');

    if (categories.length > 0) {
      categories[0].classList.add('active');
    }
    if (submenuContents.length > 0) {
      submenuContents[0].classList.add('active');
    }

    categories.forEach((category) => {
      category.addEventListener('mouseenter', () => {
        if (window.innerWidth >= 1024) {
          categories.forEach(cat => cat.classList.remove('active'));
          submenuContents.forEach(content => content.classList.remove('active'));
          
          category.classList.add('active');
          const categoryType = category.getAttribute('data-category');
          const targetSubmenu = document.querySelector(`[data-submenu="${categoryType}"]`);
          if (targetSubmenu) {
            targetSubmenu.classList.add('active');
          }
        }
      });
      category.addEventListener('click', () => {
        if (window.innerWidth >= 1024) {
          const categoryType = category.getAttribute('data-category');
          
          if (categoryType === 'csa') {
            window.location.href = '/blog/hybrid-validation-csa-with-goval/';
          } else if (categoryType === 'deployment') {
            window.location.href = '/solutions/';
          } else {
            window.location.href = `/solutions/${categoryType}/`;
          }
        }
      });
    });

    const sliderTrack = document.getElementById('sliderTrack');
    if (sliderTrack) {
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const dots = document.querySelectorAll('.megamenu-right .dot');
        let currentSlide = 0;
        const totalSlides = sliderTrack.children.length;

        function goToSlide(slideIndex) {
          if (slideIndex < 0 || slideIndex >= totalSlides) return;
          currentSlide = slideIndex;
          sliderTrack.style.transform = `translateX(${-slideIndex * 100}%)`;
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === slideIndex);
          });
        }

        function nextSlide() {
          const newSlide = (currentSlide + 1) % totalSlides;
          goToSlide(newSlide);
        }

        if (nextBtn) nextBtn.addEventListener('click', nextSlide);
        if (prevBtn) prevBtn.addEventListener('click', () => {
          const newSlide = (currentSlide - 1 + totalSlides) % totalSlides;
          goToSlide(newSlide);
        });

        dots.forEach((dot) => {
          dot.addEventListener('click', (e) => {
            const slideIndex = parseInt(e.target.getAttribute('data-slide'));
            goToSlide(slideIndex);
          });
        });
        
        setInterval(nextSlide, 5000); // Auto-slide every 5 seconds
    }
  });
</script>
